<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="60dp"
    android:paddingRight="40dp"
    android:paddingTop="200dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment"
    android:id="@+id/parentLayout"
    android:background="@drawable/background">

    <Button
        android:id="@+id/startServiceButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/startService"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/stopServiceButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/stopService"
        android:layout_below="@id/startServiceButton"/>

    <TextView
        android:id="@+id/folderTextView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/stopServiceButton"
        android:layout_marginTop="30dp"
        />

    <Button
        android:id="@+id/directoryButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/chooseAutoShareFolder"
        android:layout_below="@id/folderTextView"
        />
</RelativeLayout>
